<%- include("partials/header") -%>


    <div class="read-container" style="word-wrap: break-word; margin: 40px 10px">

        <div class="movie-title-container">
            <h1 class="movie-title"> <%= movieTitle %> </h1>
        </div>
        
        
        

            <% reviews.forEach(function(review){ %>
            
                <ul>
                    <div class="hidden">
                        <li

                            
                            <p style="margin: 50px 35px; font-family: 'Lato', sans-serif; font-size: 20px; color:#03001C ;" ><%= review.newReview %> </p> 
                        
                            

                            <div style=" margin: 40px 0 100px 0; text-align: end; color: #04364A; user-select: none;" >
                                
                                <span> Review By: &nbsp;</span> <span> <%=review.newPublisher %></span>
                            </div>
                    
                        </li>
                    </div>
                </ul>
            <% }); %>
                

            <div style=" margin: 60px 0px 100px 0px; text-align: center; padding-bottom: 30px; ">
                <p class="to-review"> <span style="user-select: none;">Write your own reviews </span>   <a href="/review" class="to-review-link">here!</a> </p> 
            </div>    
    </div>

    
    

<%- include("partials/footer") -%>

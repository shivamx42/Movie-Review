    <h1 style="margin: 40px 20px; text-align: center;"> <%= movieTitle %> </h1>
    
    

        
    

        <% reviews.forEach(function(review){ %>
        
            <ul>
                <li
                    <p style="margin: 50px 35px; font-family: 'Lato', sans-serif; font-size: 20px;" class="read-animation" ><%= review.newReview %> </p> 
                
                    
                
